<!DOCTYPE html>
<html>
<head>
  <title>UniCab - My Bookings</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body { 
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #e8f5e8 0%, #e3f2fd 100%);
      min-height: 100vh;
      background-attachment: fixed;
      position: relative;
    }
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="cars" patternUnits="userSpaceOnUse" width="100" height="100"><rect width="100" height="100" fill="none"/><path d="M20 60h60c2 0 4-2 4-4v-20c0-2-2-4-4-4H20c-2 0-4 2-4 4v20c0 2 2 4 4 4z" fill="rgba(255,255,255,0.05)"/><circle cx="30" cy="70" r="8" fill="rgba(255,255,255,0.03)"/><circle cx="70" cy="70" r="8" fill="rgba(255,255,255,0.03)"/></pattern></defs><rect width="100" height="100" fill="url(%23cars)"/></svg>');
      opacity: 0.1;
      z-index: -1;
    }
    .container { 
      max-width: 900px; 
      margin: 20px auto; 
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 20px; 
      box-shadow: 0 20px 40px rgba(0,0,0,0.1);
      padding: 0;
      overflow: hidden;
      border: 1px solid rgba(255,255,255,0.2);
    }
    .header {
      background: linear-gradient(135deg, #b39ddb 0%, #90caf9 100%);
      padding: 30px 40px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }
    .header::before {
      content: 'üì±';
      position: absolute;
      font-size: 60px;
      opacity: 0.2;
      left: 20px;
      top: 10px;
      animation: float 3s ease-in-out infinite;
    }
    .header::after {
      content: 'üé´';
      position: absolute;
      font-size: 40px;
      opacity: 0.3;
      right: 30px;
      bottom: 20px;
      animation: float 2s ease-in-out infinite reverse;
    }
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }
    h1 { 
      color: white;
      font-size: 2.5rem;
      font-weight: 700;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
      margin: 0;
      letter-spacing: 1px;
    }
    .nav { 
      background: linear-gradient(135deg, #90caf9 0%, #a5d6a7 100%);
      padding: 20px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 15px;
    }
    .nav-left, .nav-right {
      display: flex;
      align-items: center;
      gap: 15px;
    }
    .nav a { 
      text-decoration: none; 
      color: white;
      font-weight: 600;
      padding: 12px 20px;
      border-radius: 25px;
      background: rgba(255,255,255,0.2);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255,255,255,0.3);
      transition: all 0.3s ease;
      font-size: 14px;
    }
    .nav a:hover {
      background: rgba(255,255,255,0.3);
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    .content { padding: 40px; }

    ul { 
      list-style: none; 
      padding: 0;
      display: grid;
      gap: 20px;
    }
    li { 
      background: linear-gradient(135deg, #e1f5fe 0%, #f3e5f5 100%);
      margin: 0;
      padding: 25px;
      border-radius: 15px;
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
      color: #424242;
      border: 2px solid #e8eaf6;
      position: relative;
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 15px;
    }
    li:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    }
    li::before {
      content: 'üé´';
      position: absolute;
      right: 20px;
      top: 20px;
      font-size: 30px;
      opacity: 0.3;
    }
    .booking-info {
      flex: 1;
      min-width: 300px;
    }
    .booking-route {
      font-size: 1.2em;
      margin-bottom: 8px;
      font-weight: 600;
    }
    .booking-route b {
      color: #1976d2;
    }
    .booking-details {
      font-size: 0.9rem;
      opacity: 0.9;
      line-height: 1.4;
    }

    /* Status badge classes */
    .status-badge {
      display:inline-block;
      margin-top:8px;
      padding:4px 12px;
      border-radius:12px;
      font-weight:600;
      font-size:0.95em;
      border:1px solid #e0e0e0;
    }
    .status-badge.confirmed { background:#c8e6c9; color:#388e3c; }
    .status-badge.pending { background:#fff9c4; color:#fbc02d; }
    .status-badge.cancelled { background:#ffcdd2; color:#d32f2f; }

    .cancel-btn { 
      background: linear-gradient(135deg, #ff4757 0%, #ff6b6b 100%);
      color: white;
      border: none; 
      padding: 12px 20px;
      border-radius: 25px;
      cursor: pointer;
      font-weight: 600;
      font-size: 14px;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(255,71,87,0.3);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    .cancel-btn:hover { transform: translateY(-2px); box-shadow: 0 6px 20px rgba(255,71,87,0.5); }
    .cancel-btn:active { transform: translateY(0px); }

    /* Primary pay button (blue pill) */
    .pay-btn {
      background: linear-gradient(135deg, #00c6ff 0%, #0072ff 100%);
      color: white;
      border: none;
      padding: 12px 26px;
      border-radius: 28px;
      cursor: pointer;
      font-weight: 700;
      font-size: 14px;
      box-shadow: 0 8px 30px rgba(0,118,255,0.25);
      display: inline-flex;
      align-items: center;
      gap: 8px;
      text-transform: uppercase;
      letter-spacing: .6px;
      transition: transform 0.18s ease, box-shadow 0.18s ease;
    }
    .pay-btn:hover { transform: translateY(-3px); box-shadow: 0 12px 40px rgba(0,118,255,0.32); }
    .pay-btn:active { transform: translateY(0); }

    .no-bookings {
      text-align: center;
      padding: 60px 20px;
      background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
      color: #424242;
      border: 2px solid #e8eaf6;
      border-radius: 15px;
      font-size: 1.2rem;
      position: relative;
    }
    .no-bookings::before {
      content: 'üìã‚ùå';
      display: block;
      font-size: 60px;
      margin-bottom: 20px;
      opacity: 0.7;
    }
    @media (max-width: 768px) {
      .container { margin: 10px; border-radius: 15px; }
      .header, .nav, .content { padding: 20px; }
      h1 { font-size: 2rem; }
      .nav { flex-direction: column; text-align: center; }
      .nav-left, .nav-right { justify-content: center; }
      li { flex-direction: column; text-align: center; }
      .booking-info { min-width: auto; width: 100%; }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>‚ñº My Bookings</h1>
    </div>
    <div class="nav">
      <div class="nav-left"><span>üé´ Your Ride History</span></div>
      <div class="nav-right">
        <a href="/">‚åÇ Home</a>
        <a href="/logout">üö™ Logout</a>
      </div>
    </div>
    <div class="content">
      <% if (bookings.length === 0) { %>
        <div class="no-bookings">
          No bookings yet!<br>
          <small>Start exploring rides and book your first trip!</small>
        </div>
      <% } else { %>
        <ul>
          <% bookings.forEach(function(booking) { %>
            <li>
              <div class="booking-info">
                <div class="booking-route">
                  <b><%= booking.ride ? booking.ride.from : 'N/A' %></b> ‚û°Ô∏è <b><%= booking.ride ? booking.ride.to : 'N/A' %></b>
                </div>
                <div class="booking-details">
                  üìÖ <strong>Booked on:</strong> <%= new Date(booking.bookedAt).toLocaleString() %><br>
                  üí∞ <strong>Price:</strong> ‚Çπ<%= booking.ride ? booking.ride.price : 'N/A' %> per seat<br>
                  <span class="status-badge <%= booking.status %>">
                    <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                  </span>
                </div>
              </div>
              <form action="/cancel-booking/<%= booking._id %>" method="POST" style="display:inline">
                <button type="submit" class="cancel-btn">‚ùå Cancel</button>
              </form>
              <% 
                const ps = booking.paymentStatus || 'none';
                if (ps === 'none') { 
              %>
                <button class="pay-btn" data-booking-id="<%= booking._id %>" style="margin-left:8px">üí≥ PAY</button>
              <% } else if (ps === 'requires_capture') { %>
                <div style="margin-left:12px; font-weight:600">Payment: Authorized ‚Äî awaiting capture</div>
                <% 
                  const isDriver = (typeof role !== 'undefined' && role === 'driver' && booking.ride && booking.ride.driver && booking.ride.driver.toString() === userId);
                  const isRider = (typeof role !== 'undefined' && role === 'rider' && booking.rider && booking.rider.toString() === userId);
                %>
                <% if (isRider) { %>
                  <!-- Rider may want to retry or view details: show Pay button which opens modal -->
                  <button class="pay-btn" data-booking-id="<%= booking._id %>" style="margin-left:8px">üí≥ PAY</button>
                  <a href="/receipt/<%= booking._id %>" style="margin-left:10px; font-weight:600; color:#1976d2; text-decoration:none">View receipt</a>
                <% } else if (isDriver) { %>
                  <a href="/receipt/<%= booking._id %>" style="margin-left:10px; font-weight:600; color:#1976d2; text-decoration:none">View receipt</a>
                  <button class="cancel-btn capture-btn" data-booking-id="<%= booking._id %>" style="background: linear-gradient(135deg,#43a047,#2e7d32); margin-left:8px">Capture</button>
                <% } else { %>
                  <a href="/receipt/<%= booking._id %>" style="margin-left:10px; font-weight:600; color:#1976d2; text-decoration:none">View receipt</a>
                <% } %>
              <% } else if (ps === 'succeeded' || ps === 'captured' || ps === 'paid') { %>
                <div style="margin-left:12px; font-weight:600; color:#2e7d32">Payment: Paid</div>
                <a href="/receipt/<%= booking._id %>" style="margin-left:10px; font-weight:600; color:#1976d2; text-decoration:none">View receipt</a>
                <a href="/feedback/<%= booking._id %>" style="margin-left:10px; font-weight:600; color:#ff9800; text-decoration:none">Give Feedback</a>
              <% } else { %>
                <div style="margin-left:12px; font-weight:600">Payment: <%= ps %></div>
              <% } %>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </div>
  <!-- Stripe payment modal -->
  <div id="payment-modal" style="display:none; position:fixed; inset:0; background:rgba(0,0,0,0.6); align-items:center; justify-content:center; z-index:2000">
    <div style="background:white; width:520px; max-width:95%; padding:18px; border-radius:12px; box-shadow:0 10px 40px rgba(0,0,0,0.3);">
      <h3 style="margin-bottom:6px">Payment & Details</h3>
      <div style="margin-bottom:8px">
        <label style="font-weight:600; display:block; margin-bottom:6px">Name</label>
        <input id="payer-name" type="text" placeholder="Full name" style="width:100%; padding:10px; border-radius:8px; border:1px solid #ddd" />
      </div>
      <div style="margin-bottom:8px">
        <label style="font-weight:600; display:block; margin-bottom:6px">Address</label>
        <input id="payer-address" type="text" placeholder="Address or note" style="width:100%; padding:10px; border-radius:8px; border:1px solid #ddd" />
      </div>
      <div style="margin-bottom:8px">
        <label style="font-weight:600; display:block; margin-bottom:6px">Car / Note (optional)</label>
        <input id="car-details" type="text" placeholder="Car model or pickup note" style="width:100%; padding:10px; border-radius:8px; border:1px solid #ddd" />
      </div>

      <div style="margin-bottom:12px">
        <label style="font-weight:600; display:block; margin-bottom:6px">Payment method</label>
        <div style="display:flex; gap:12px">
          <label style="display:flex; align-items:center; gap:6px;"><input type="radio" name="payopt" value="card" checked /> Card</label>
          <label style="display:flex; align-items:center; gap:6px;"><input type="radio" name="payopt" value="gpay" /> GPay</label>
          <label style="display:flex; align-items:center; gap:6px;"><input type="radio" name="payopt" value="cash" /> Cash</label>
        </div>
      </div>

      <div id="card-section" style="margin-bottom:8px">
        <label style="font-weight:600; display:block; margin-bottom:6px">Card</label>
        <div id="card-element" style="margin:6px 0;"></div>
        <div id="card-errors" style="color:#c62828; min-height:18px"></div>
      </div>

      <div id="gpay-section" style="margin-bottom:8px; display:none">
        <label style="font-weight:600; display:block; margin-bottom:6px">UPI ID (for GPay)</label>
        <input id="upi-id" type="text" placeholder="your-vpa@bank" style="width:100%; padding:10px; border-radius:8px; border:1px solid #ddd" />
      </div>

      <div style="display:flex; gap:10px; justify-content:flex-end; margin-top:6px">
        <button id="close-modal" class="cancel-btn" style="background:#9e9e9e">Close</button>
        <button id="confirm-pay" class="pay-btn">üí≥ PAY</button>
      </div>
    </div>
  </div>

  <script src="https://js.stripe.com/v3/"></script>
  <script>
    const STRIPE_PUBLISHABLE_KEY = '<%= stripePublishableKey || '' %>';
    let stripe = null;
    let card = null;
    let currentBookingId = null;

    function openModal() { document.getElementById('payment-modal').style.display = 'flex'; }
    function closeModal() { document.getElementById('payment-modal').style.display = 'none'; }

    document.addEventListener('DOMContentLoaded', function() {
      // toggle UI sections when payment option changed
      document.querySelectorAll('input[name="payopt"]').forEach(r => {
        r.addEventListener('change', () => {
          const val = document.querySelector('input[name="payopt"]:checked').value;
          const gpaySection = document.getElementById('gpay-section');
          const cardSection = document.getElementById('card-section');
          if (val === 'gpay') { if (cardSection) cardSection.style.display = 'none'; if (gpaySection) gpaySection.style.display = 'block'; }
          else if (val === 'cash') { if (cardSection) cardSection.style.display = 'none'; if (gpaySection) gpaySection.style.display = 'none'; }
          else { if (cardSection) cardSection.style.display = 'block'; if (gpaySection) gpaySection.style.display = 'none'; }
        });
      });

      document.querySelectorAll('.pay-btn').forEach(btn => {
        btn.addEventListener('click', async (e) => {
          currentBookingId = btn.getAttribute('data-booking-id');
          // store bookingId on confirm button as a fallback so confirm handler always has it
          const confirmBtn = document.getElementById('confirm-pay');
          if (confirmBtn) confirmBtn.setAttribute('data-booking-id', currentBookingId || '');
          openModal();
        });
      });

      document.getElementById('confirm-pay').addEventListener('click', async (e) => {
        e.preventDefault();
        const payerName = document.getElementById('payer-name').value || '';
        const payerAddress = document.getElementById('payer-address').value || '';
        const carDetails = document.getElementById('car-details').value || '';
        const paymentOption = document.querySelector('input[name="payopt"]:checked').value;
        const upiId = document.getElementById('upi-id') ? document.getElementById('upi-id').value : '';

        try {
          // bookingId may be stored on the confirm button as fallback
          const confirmBtn = document.getElementById('confirm-pay');
          const bookingId = currentBookingId || (confirmBtn && confirmBtn.getAttribute('data-booking-id')) || null;
          if (!bookingId) return alert('Booking ID missing. Please re-open the payment dialog and try again.');

          if (paymentOption === 'card') {
            // create payment intent with payer info
            const resp = await fetch(`/api/bookings/${bookingId}/create-payment-intent`, {
              method: 'POST', credentials: 'include', headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ payerName, payerAddress, carDetails, paymentOption })
            });
            let data;
            try { data = await resp.json(); }
            catch (parseErr) {
              const txt = await resp.text().catch(()=>null);
              return alert('Failed to create payment intent: ' + (txt || parseErr.message || 'Invalid response'));
            }
            if (!data.success) return alert('Failed to create payment intent: ' + (data.error || data.message || ''));
            if (data.simulated) { alert('Payment simulated successfully (development mode).'); window.location.reload(); return; }
            const clientSecret = data.clientSecret;

            if (!STRIPE_PUBLISHABLE_KEY) { alert('Stripe publishable key not configured on server.'); return; }
            if (!stripe) { stripe = Stripe(STRIPE_PUBLISHABLE_KEY); const elements = stripe.elements(); card = elements.create('card'); card.mount('#card-element'); }

            const result = await stripe.confirmCardPayment(clientSecret, { payment_method: { card } });
            if (result.error) { document.getElementById('card-errors').textContent = result.error.message || 'Payment error'; return; }
            if (result.paymentIntent && (result.paymentIntent.status === 'requires_capture' || result.paymentIntent.status === 'succeeded')) {
              alert('Payment authorized. Driver will capture payment when ride completes.');
              closeModal();
              window.location.reload();
            } else {
              document.getElementById('card-errors').textContent = 'Unexpected payment status: ' + (result.paymentIntent && result.paymentIntent.status);
            }
          } else {
            // gpay or cash -> call simulate endpoint which now handles both
            const body = { payerName, payerAddress, carDetails, paymentOption };
            if (paymentOption === 'gpay') body.upiId = upiId;
            const gresp = await fetch(`/api/bookings/${bookingId}/simulate-gpay`, { method: 'POST', credentials: 'include', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(body) });
            let gdata;
            try { gdata = await gresp.json(); }
            catch (parseErr) {
              const txt = await gresp.text().catch(()=>null);
              return alert('Payment simulation failed: ' + (txt || parseErr.message || 'Invalid response'));
            }
            if (!gdata.success) return alert((gdata.error || gdata.message) || 'Payment simulation failed');
            alert(paymentOption === 'gpay' ? 'GPay simulated payment successful' : 'Cash payment selected; driver will collect on pickup.');
            closeModal();
            window.location.reload();
          }
        } catch (err) {
          alert('Error processing payment: ' + (err && err.message ? err.message : err));
        }
      });

      document.getElementById('close-modal').addEventListener('click', (e) => { e.preventDefault(); closeModal(); });
    });

    // capture button handler (driver UI)
    document.addEventListener('click', async (e) => {
      if (e.target && e.target.classList && e.target.classList.contains('capture-btn')) {
        const bookingId = e.target.getAttribute('data-booking-id');
        if (!confirm('Capture payment for this booking? This action cannot be undone.')) return;
        try {
          const resp = await fetch(`/api/bookings/${bookingId}/capture-payment`, { method: 'POST', credentials: 'include' });
          let data;
          try { data = await resp.json(); }
          catch(parseErr) { const txt = await resp.text().catch(()=>null); return alert('Failed to capture payment: ' + (txt || parseErr.message || 'Invalid response')); }
          if (!data.success) return alert('Failed to capture payment: ' + (data.message || data.error || ''));
          alert('Payment captured successfully');
          window.location.reload();
        } catch (err) {
          alert('Error capturing payment: ' + (err && err.message ? err.message : err));
        }
      }
    });
  </script>
</body>
</html>
