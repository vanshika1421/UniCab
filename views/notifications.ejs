<!DOCTYPE html>
<html>
<head>
  <title>Notifications</title>
  <style>
    body{font-family:Segoe UI, Tahoma, Geneva, Verdana, sans-serif; background:#f7fafc; padding:20px}
    .card{max-width:800px;margin:0 auto;background:white;padding:20px;border-radius:10px;box-shadow:0 8px 20px rgba(0,0,0,0.06)}
    .item{padding:12px;border-bottom:1px solid #eef2f7}
    .meta{font-size:12px;color:#718096}
    .type{font-weight:700}
  </style>
</head>
<body>
  <div class="card">
    <h2>Your Notifications</h2>
    <% if (!notifications || notifications.length===0) { %>
      <p>No notifications yet.</p>
    <% } else { %>
      <% notifications.forEach(function(n){ %>
        <div class="item">
          <div class="type">
            <%= n.type %> (<%= n.method || 'N/A' %>)
            <% if (n.simulated) { %>
              <span style="background:#fff3cd;color:#856404;padding:4px 8px;border-radius:6px;margin-left:8px;font-weight:700;font-size:12px;">Simulated</span>
            <% } %>
          </div>
          <div><pre style="white-space:pre-wrap"><%= JSON.stringify(n.payload || n, null, 2) %></pre></div>
          <div class="meta">Sent: <%= new Date(n.sentAt).toLocaleString() %></div>
        </div>
      <% }) %>
    <% } %>
  </div>
</body>
</html>
