# Copy this file to .env and update values for local development

# App
PORT=5000
MONGO_URI=mongodb://mongo:27017/unicab
JWT_SECRET=change_this_dev_secret

# Redis (used by worker and queue)
REDIS_URL=redis://redis:6379

# SMTP (optional) - use Mailtrap/Ethereal for testing
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_pass
SMTP_SECURE=false
FROM_EMAIL=no-reply@unicab.example

# Twilio (optional) - if provided, SMS messages will be sent via Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890
